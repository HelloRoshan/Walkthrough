<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.BookList" 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Table
		id="bookList"
		class="sapUiResponsiveMargin"
		width="auto"
		items="{
			path: 'book>/Invoices',
			sorter: {
				path: 'ShipperName',
				group: true
				}
			}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>invoiceListTitle}"></Title>
				<ToolbarSpacer />
				<SearchField width="50%" search = "onFilterBooks" />
			</Toolbar>
		</headerToolbar>
		
		<columns>
			<Column
				hAlign="End"
				minScreenWidth="Small"
				demandPopin="true"
				width="4em">
				<Text text="{i18n>columnQuantity}"></Text>
			</Column>
			<Column>
				<Text text="{i18n>columnName}"></Text>
			</Column>
			<Column
				minScreenWidth="Small"
				demandPopin="true">
				<Text text="{i18n>columnStatus}"></Text>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="false">
				<Text text="{i18n>columnSupplier}"></Text>
			</Column>
			<Column
				hAlign="End">
				<Text text="{i18n>columnPrice}"></Text>
			</Column>
		</columns>
		<items>
			<ColumnListItem
			type="Navigation"
			press="onPress">
				<cells>
					<ObjectNumber number="{book>Quantity}" emphasized="false" />
					<ObjectIdentifier title="{book>ProductName}" />
					<ObjectStatus text="{
						path: 'book>Status',
						formatter: '.formatter.statusText'
						}" />
					<Text text="{book>ShipperName}" />
					<ObjectNumber
						number="{
							parts: [{path: 'book>ExtendedPrice'}, {path: 'view>/currency'}],
							type: 'sap.ui.model.type.Currency',
							formatOptions:{
								showMeasure: false
								}
							}"
						unit="{view>/currency}"
						state="{= $book>ExtendedPrice} > 50 ? 'Error': 'Success' }" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>