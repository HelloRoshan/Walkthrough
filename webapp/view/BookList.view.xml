<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.BookList" 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<List
		id="bookList"
		class="sapUiResponsiveMargin"
		width="auto"
		items="{
			path: 'book>/Invoices',
			sorter: {
				path: 'ShipperName',
				group: true
				}
			}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>invoiceListTitle}"></Title>
				<ToolbarSpacer />
				<SearchField width="50%" search = "onFilterBooks" />
			</Toolbar>
		</headerToolbar>
		<items>
			<ObjectListItem
				title = "{book>Quantity} x {book>ProductName}"
				number="{
					parts: [{path: 'book>ExtendedPrice'}, {path: 'view>/currency'}],
					type: 'sap.ui.model.type.Currency',
					formatOptions: {
						showMeasure: false
					}
				}"
				numberUnit="{view>/currency}"
				numberState="{= ${book>ExtendedPrice}>50 ?'Error' : 'Success' }"
				type="Navigation"
				press="onPress">
				<firstStatus>
					<ObjectStatus text="{
						path: 'book>Status',
						formatter: '.formatter.statusText' }" />
				</firstStatus>
			</ObjectListItem>
		</items>
	</List>
</mvc:View>