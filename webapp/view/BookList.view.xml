<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.BookList" 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<List
		headerText = "{i18n>bookListTitle}"
		class="sapUiResponsiveMargin"
		width="auto"
		items="{book>/Books}">
		<items>
			<ObjectListItem
				title = "{book>title}"
				number="{
					parts: [{path: 'book>price'}, {path: 'view>/currency'}],
					type: 'sap.ui.model.type.Currency',
					formatOptions: {
						showMeasure: false
					}
				}"
				numberUnit="{view>/currency}"
				numberState="{= ${book>price}>500 ?'Error' : 'Success' }">
				<firstStatus>
					<ObjectStatus text="{
						path: 'book>Status',
						formatter: '.formatter.statusText' }" />
				</firstStatus>
			</ObjectListItem>
		</items>
	</List>
</mvc:View>